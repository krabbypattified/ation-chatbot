orange = #FF5D00

body
  background #f8f8f8
  font 14px Merriweather, serif
  color #444

::-webkit-scrollbar
  width 12px
  height 12px

::-webkit-scrollbar-thumb
  border 6px solid #ddd
  border-radius 6px

::-webkit-scrollbar-track
  border 6px solid white
  border-radius 6px

hr
  border 0
  border-top 1px solid #ddd
  margin 0
  height 1px
  position relative
  bottom 7px
