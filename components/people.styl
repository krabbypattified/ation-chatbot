.people
  padding 1.5em 1em
  display flex
  overflow-x auto
  overflow-y hidden
  position sticky
  top 0
  z-index 5
  background #f8f8f8

  a
    color inherit

  .person
    background-size cover
    border-radius 200px
    box-shadow 2px 2px 4px rgba(0,0,0,.16)
    cursor pointer
    height 5em
    width 8em
    min-width 8em // this is important
    margin 0 10px
    position relative

    opacity 0
    animation-name slideUp
    animation-duration 1s
    animation-fill-mode forwards

    &:hover p
      display block
      opacity 1
      bottom -2em

  .person p
    background #f2f2f2
    transition all .2s
    background white
    border-radius 3px
    box-shadow 0px 1px 1px rgba(0,0,0,0.2)
    font-size 1.1em
    opacity 0
    float left
    left 50%
    padding 7px 9px
    position absolute
    bottom -3em
    user-select none
    transform translateX(-50%)
    white-space nowrap
    z-index 1
