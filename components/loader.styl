div.load
  background-color orange
  display flex
  align-items center
  justify-content center
  position fixed
  width 100%
  height 100%
  z-index 10

  animation-name color
  animation-duration 1s
  animation-fill-mode forwards

@keyframes color
    70%
      background-color orange
      opacity 1
    to
      background-color white
      opacity 0

img.load
  width 30vmin

  animation-name fade
  animation-duration 1s
  animation-fill-mode forwards

@keyframes fade
    70%
      opacity 1
      transform scale(1)
    to
      opacity 0
      transform scale(0)
