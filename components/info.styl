.info
  display flex
  flex-direction column
  margin 1em 1.5em
  font-size 1.1em
  line-height 1.5
  +above(800px)
    max-width 740px
    margin 2em auto

  .block
    margin-bottom 1em

  .image
    display none


+above(600px)
  .info
    .block
      display flex
      &:nth-child(2) .image
        order 1

    .text
      flex 1

    .image
      display flex
      align-items center
      justify-content center
      margin 1.5em 1em 0 0
      flex-basis 150px
      img
        max-width 10em
        max-height 11em

+above(1050px)
  .info
    flex-direction row
    max-width 1000px

    .block
      flex-direction column
      flex 1

    .text
      order 1
      margin 0 2em 1em 2em
      h1
        text-align center

    .image
      margin 0
      align-items flex-end



.contact
  display flex
  justify-content center
  margin 3em 1.5em 6em 1.5em
  +below(700px)
    margin 1.5em
  div
    background-color orange
    user-select none
    cursor pointer
    border-radius 3px
    box-shadow 0px 1px 1px rgba(0,0,0,0.2)
    color white
    font-size 1.5em
    letter-spacing 5px
    padding 15px
    text-align center
    width 600px
    &:hover
      background-color #4caf50
      transition all .06s
    &:active
      background-color darken(#4caf50,10%)
